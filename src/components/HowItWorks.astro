<section id="how-it-works" class="py-20 bg-gray-50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">How InfiniteGame Works</h2>
      <p class="text-lg text-gray-600">
        Turn your productivity into a rewarding game that keeps you engaged and motivated.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Step 1 -->
      <div class="relative">
        <!-- Number -->
        <div class="absolute -left-4 -top-4 w-12 h-12 rounded-full bg-primary text-white flex items-center justify-center text-xl font-bold z-10">
          1
        </div>
        
        <div class="bg-white p-8 pt-12 rounded-xl shadow-sm border border-gray-100 relative h-full">
          <h3 class="text-xl font-bold mb-3">Create Tasks</h3>
          <p class="text-gray-600">
            Add your tasks to InfiniteGame just like any to-do app, but with added context about importance and estimated time.
          </p>
        </div>
        
        <!-- Connector line (desktop only) -->
        <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-2 bg-primary"></div>
      </div>
      
      <!-- Step 2 -->
      <div class="relative md:mt-12">
        <!-- Number -->
        <div class="absolute -left-4 -top-4 w-12 h-12 rounded-full bg-accent1 text-white flex items-center justify-center text-xl font-bold z-10">
          2
        </div>
        
        <div class="bg-white p-8 pt-12 rounded-xl shadow-sm border border-gray-100 relative h-full">
          <h3 class="text-xl font-bold mb-3">AI Optimization</h3>
          <p class="text-gray-600">
            Our AI analyzes your tasks, schedule, and past behavior to optimize your day for maximum productivity.
          </p>
        </div>
        
        <!-- Connector lines (desktop only) -->
        <div class="hidden md:block absolute top-1/2 -left-4 w-8 h-2 bg-accent1"></div>
        <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-2 bg-accent2"></div>
      </div>
      
      <!-- Step 3 -->
      <div class="relative">
        <!-- Number -->
        <div class="absolute -left-4 -top-4 w-12 h-12 rounded-full bg-accent2 text-white flex items-center justify-center text-xl font-bold z-10">
          3
        </div>
        
        <div class="bg-white p-8 pt-12 rounded-xl shadow-sm border border-gray-100 relative h-full">
          <h3 class="text-xl font-bold mb-3">Level Up</h3>
          <p class="text-gray-600">
            Complete tasks to earn XP, unlock achievements, and level up your productivity game while getting more done.
          </p>
        </div>
        
        <!-- Connector line (desktop only) -->
        <div class="hidden md:block absolute top-1/2 -left-4 w-8 h-2 bg-accent2"></div>
      </div>
    </div>
  </div>
</section>